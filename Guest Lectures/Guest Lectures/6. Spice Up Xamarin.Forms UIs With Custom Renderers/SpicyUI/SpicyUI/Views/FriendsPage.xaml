<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SpicyUI.FriendsPage"
	xmlns:local="clr-namespace:SpicyUI;">
	<ContentPage.Content>
		<StackLayout>
			<ListView ItemsSource="{Binding Friends}"
				IsPullToRefreshEnabled="true"
				BackgroundColor="White"
				RowHeight="70">
				<ListView.ItemTemplate>
    				<DataTemplate>
      					<ViewCell>
      						<StackLayout Padding="10, 0, 0, 0"
      							Orientation="Horizontal">
      							<Image Source="{Binding Image}"
      								HeightRequest="55"
      								WidthRequest="55"  />
      							<Label BackgroundColor="Transparent"
      								FontAttributes="None"
      								FontFamily="HelveticaNeue-Light"
      								FontSize="16"
      								LineBreakMode="NoWrap"
      								TextColor="Black"
      								Text="{Binding Name}"
      								VerticalOptions="Center" />
      						</StackLayout>
      					</ViewCell>
    				</DataTemplate>
  				</ListView.ItemTemplate>
			</ListView>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>